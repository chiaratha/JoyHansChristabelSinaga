bool searchHorizontal(char input[]){
	char *A;
	
	for(int i = 0; i < 15; i++)
    {
        A = strstr(words[i], input);
        
	    if(A != NULL){
	    	
	    	return true;
	    }
    }
    
    return false;
}

bool searchVertical(char input[]){
	char *A;
	char Word[15];
	
	for(int i = 0; i < 15; i++)
    {
        for(int j = 0; j < 15; j++)
        {
            Word[j] = words[j][i];
        }
        
        A = strstr(Word, input);
		
		if(A != NULL){
			
	        return true;
	    }
    }
    
    return false;
}

